@{
    ViewBag.Title = "Увійти";
}

<main class="main-content">
    <div class="container">
		<div class="page">
			@if (Session["ErrorMessage"] != null)
			{
				<div class="alert alert-danger" role="alert">
					@Session["ErrorMessage"]
				</div>
			}
			@{ Session["ErrorMessage"] = null; }
			<form action="@Url.Action("CheckLogin", "Home")" method="post">
				<div class="form-group">
					<label for="login">Логін</label>
					<input type="text" class="form-control" id="login" name="login" required="" placeholder="Введіть логін">
				</div>
				<div class="form-group">
					<label for="password">Пароль</label>
					<input type="password" class="form-control" name="password" required="" id="password" placeholder="">
				</div>
				<button type="submit" class="btn btn-primary">Увійти</button>
			</form>

		</div>
    </div> <!-- .container -->
</main>